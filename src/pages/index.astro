---
import Layout from "../layouts/Layout.astro";
import ThemeIcon from "../components/ThemeIcon.astro";
import ProjectCard from "../components/ProjectCard.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const allProjects = await Astro.glob("../pages/projects/*.md");
const highlightedProjects = allProjects.filter(
	(project) => project.frontmatter.highlighted,
);
---

<Layout title="Alexzander Stone">
	<main>
		<Header />
		<!-- <ThemeIcon /> -->
		<div class="instructions">
			<h2>Projects<a href="/projects">view more<span>&rarr;</span></a></h2>
		</div>
		<ul role="list" class="link-card-grid">
			{
				highlightedProjects.map((highlighted_project) => (
					<ProjectCard
						title={highlighted_project.frontmatter.shortTitle}
						body={highlighted_project.frontmatter.description}
						photoUrl={highlighted_project.frontmatter.image.url}
						href={
							highlighted_project.url
								? highlighted_project.url
								: ""
						}
					/>
				))
			}
		</ul>
		<Footer />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	.instructions {
		padding: 0rem 1.5rem;
		border-radius: 8px;
	}
	.instructions a {
		color: rgb(157, 157, 157);
		padding: 0 .5rem;
		font-size: .8rem;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
